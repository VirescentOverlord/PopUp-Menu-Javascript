//backround

let backround = document.createElement('div');
backround.style.textAlign = 'center'
backround.textContent += "ㅤMade By Virescent Overlordㅤ";
backround.style.color = 'white';
backround.style.position = 'absolute';
backround.style.width = '15%';
backround.style.height = '20%';
backround.style.top = '15%';
backround.style.left = '25%';
backround.style.background = '#1f1d18';
backround.style.zIndex = '1';
backround.style.boxShadow = "7px 7px 99px black";
document.body.appendChild(backround);

//button

let button = document.createElement("div");
button.style.textAlign = 'center';
button.style.position = 'absolute';
button.style.top = '35%';
button.style.left = '45%';
button.style.transform = 'translateX(-50%)';
button.style.border = '1px solid white';
button.style.padding = '1vmin';
button.style.borderRadius = '1vmin';
button.style.zIndex = '2';
button.textContent += "ㅤOkㅤ";
button.style.background = '#0044ff';
button.style.cursor = "pointer";
button.onclick = function() {
  backround.style.visibility = "hidden";
  button.style.visibility = "hidden"
};
document.body.appendChild(button);
